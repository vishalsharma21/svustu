<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:padding="15dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_left_chevron" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#fff"
            android:layout_toRightOf="@id/back"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose a Password"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:textColor="#000"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set a password to you SVU account"
        android:gravity="center"
        android:singleLine="false"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:textColor="#797676"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_pass"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="20dp"
            android:hint="Create new password"
            android:layout_marginRight="25dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cnfrm_pass"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="70dp">

        <EditText
            android:id="@+id/cnfrmpass"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="20dp"
            android:hint="Create new password"
            android:layout_marginRight="25dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="25dp">


        <Button
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:text="Submit"></Button>


        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:text="Cancel"></Button>
    </LinearLayout>

</LinearLayout>