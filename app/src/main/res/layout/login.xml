<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="match_parent">    <TextView        android:id="@+id/login"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorPrimary"        android:text="Login"        android:textSize="40dp"        android:textStyle="bold"        android:gravity="center_horizontal|center_vertical"        android:textColor="#ffffff"/>    <ImageView        android:id="@+id/app"        android:layout_width="70dp"        android:layout_height="70dp"        android:layout_marginTop="35dp"        android:src="@drawable/app_icon"        android:layout_below="@+id/login"        android:layout_centerHorizontal="true"/>    <TextView        android:id="@+id/welcome"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Welcome To SVU !"        android:layout_below="@id/login"        android:layout_marginTop="130dp"        android:textStyle="bold"        android:layout_centerHorizontal="true"        android:textSize="30dp"/>    <LinearLayout        android:id="@+id/login_view"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@id/welcome"        android:layout_marginLeft="50dp"        android:layout_marginRight="50dp"        android:orientation="vertical"        android:layout_marginTop="35dp">            <EditText                android:id="@+id/username"                android:layout_width="match_parent"                android:layout_height="50dp"                android:textSize="20dp"                android:textAllCaps="true"                android:singleLine="true"                android:hint="Enrollment Number"                android:layout_marginRight="25dp"/>            <EditText                android:id="@+id/password"                android:layout_width="match_parent"                android:layout_height="50dp"                android:textSize="20dp"                android:singleLine="true"                android:textAllCaps="true"                android:hint="Enter MOTHER's name"                android:layout_marginRight="25dp"/>    </LinearLayout>    <TextView        android:id="@+id/txtNote"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="NOTE : Enter MOTHER's name as password."        android:layout_below="@id/login_view"        android:layout_marginTop="25dp"        android:textSize="12dp"        android:textColor="@color/red"        android:textStyle="bold|italic"        android:layout_marginLeft="50dp">    </TextView>    <TextView        android:id="@+id/forgot"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Forgot Password?"        android:layout_below="@id/txtNote"        android:layout_marginTop="25dp"        android:textSize="20dp"        android:textStyle="bold"        android:visibility="invisible"        android:layout_marginLeft="50dp">    </TextView>    <Button        android:id="@+id/btnSubmit"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerHorizontal="true"        android:layout_marginTop="20dp"        android:background="@drawable/button_signup_curve"        android:ems="12"        android:layout_below="@id/forgot"        android:text="Login"        android:textAllCaps="false"        android:textColor="#fff" /></RelativeLayout>