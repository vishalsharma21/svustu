<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="match_parent">    <ImageView        android:id="@+id/app"        android:layout_width="50dp"        android:layout_height="50dp"        android:layout_marginTop="15dp"        android:layout_marginLeft="15dp"        android:src="@drawable/app_icon">    </ImageView>    <TextView        android:id="@+id/login"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Login"        android:layout_marginLeft="15dp"        android:textSize="40dp"        android:layout_marginTop="25dp"        android:textStyle="bold"        android:textColor="#01baf2"        android:layout_toRightOf="@id/app">    </TextView>    <TextView        android:id="@+id/welcome"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Welcome To SVU !"        android:layout_below="@id/login"        android:layout_marginTop="150dp"        android:textStyle="bold"        android:layout_marginLeft="50dp"        android:textSize="30dp">    </TextView>    <TextView        android:id="@+id/lot"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Never stop learning..."        android:layout_below="@id/welcome"        android:layout_marginLeft="50dp"        android:textSize="20dp">    </TextView>    <LinearLayout        android:id="@+id/login_view"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@id/lot"        android:layout_marginLeft="50dp"        android:orientation="vertical"        android:layout_marginTop="35dp">        <com.google.android.material.textfield.TextInputLayout            android:id="@+id/text_input_layout"            android:layout_width="match_parent"            android:layout_height="50dp">            <EditText                android:id="@+id/username"                android:layout_width="match_parent"                android:layout_height="50dp"                android:textSize="20dp"                android:hint="UserName"                android:layout_marginRight="25dp"/>        </com.google.android.material.textfield.TextInputLayout>        <View            android:layout_width="match_parent"            android:layout_height="1dp"            android:background="@drawable/gradient"            android:layout_marginRight="25dp"></View>        <com.google.android.material.textfield.TextInputLayout            android:id="@+id/text"            android:layout_width="match_parent"            android:layout_height="50dp"            android:layout_marginTop="25dp">            <EditText                android:id="@+id/password"                android:layout_width="match_parent"                android:layout_height="50dp"                android:textSize="20dp"                android:hint="Password"                android:layout_marginRight="25dp"/>        </com.google.android.material.textfield.TextInputLayout>        <View            android:layout_width="match_parent"            android:layout_height="1dp"            android:background="@drawable/gradient"            android:layout_marginRight="25dp"></View>    </LinearLayout>    <TextView        android:id="@+id/forgot"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Forgot Password?"        android:layout_below="@id/login_view"        android:layout_marginTop="25dp"        android:textSize="20dp"        android:textStyle="bold"        android:layout_marginLeft="50dp">    </TextView>    <Button        android:id="@+id/btnSubmit"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerHorizontal="true"        android:layout_marginTop="70dp"        android:background="@drawable/button_signup_curve"        android:ems="12"        android:layout_below="@id/forgot"        android:text="Login"        android:textAllCaps="false"        android:textColor="#fff" /></RelativeLayout>