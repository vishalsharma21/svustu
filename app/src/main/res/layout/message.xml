<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/recieve_message"
        android:paddingBottom="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:gravity="right|center_vertical"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="2dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:singleLine="true"
            android:id="@+id/name"
            android:textSize="14sp"
            android:textColor="@color/light_black"/>

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="House no."
            android:id="@+id/house_no"
            android:layout_marginLeft="20sp"
            android:singleLine="true"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:textColor="@color/light_black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:id="@+id/relative_text">

            <TextView
                android:id="@+id/message1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:id="@+id/image"
                android:visibility="gone"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:visibility="gone"
                android:id="@+id/video_layout">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    android:id="@+id/video"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_play"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/file_layout"
                android:visibility="gone"
                android:layout_marginTop="2sp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/file_iamge"
                    app:srcCompat="@drawable/ic_file"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="textdocumet.xls"
                    android:singleLine="true"
                    android:id="@+id/file_text"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_toRightOf="@+id/file_iamge"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="timestamp"
            android:singleLine="true"
            android:textColor="@color/light_black"
            android:layout_below="@+id/relative_text"
            android:textSize="14sp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
